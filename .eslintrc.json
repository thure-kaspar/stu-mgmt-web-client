{
	"root": true,
	"ignorePatterns": ["**/*"],
	"plugins": ["@nx"],
	"overrides": [
		{
			"files": ["*.ts"],
			"extends": ["plugin:@nx/typescript"],
			"rules": {
				"semi": ["error", "always"],
				"quotes": ["error", "double"],
				"indent": [
					"error",
					"tab",
					{
						"SwitchCase": 1
					}
				],
				"no-case-declarations": "off",
				"@typescript-eslint/no-unused-vars": [
					2,
					{
						"args": "after-used",
						"argsIgnorePattern": "^_"
					}
				]
			}
		},
		{
			"files": ["*.js"],
			"extends": ["plugin:@nx/javascript"],
			"rules": {}
		}
	]
}
